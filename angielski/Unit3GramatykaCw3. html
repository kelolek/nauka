<script>
    // --- KONFIGURACJA ---
    const GOOGLE_SCRIPT_URL = "https://script.google.com/macros/s/AKfycbz_ByEj8poSy36m8iehCHYmislHj0sTvHLRhQPUkgic_L5Ss8fXrF_a2THkm-hpuZL0OA/exec"; 


    // Konfiguracja zmiennych pod Unit 3
    const STORAGE_KEY = 'unit3_grammar_master_v2'; 
    const catNames = { 
        'art': 'Przedimki (a/an/-)',
        'plu': 'Liczba Mnoga',
        'hvg': 'Have got / Has got'
    };
    // ---------------------

    let state = { score: 0, answeredIds: {}, startTime: null, endTime: null, isFinished: false };
    let timerInterval;

    window.addEventListener('load', () => {
        loadState();
        if (!state.startTime) { state.startTime = Date.now(); saveState(); }
        if(!state.isFinished) { timerInterval = setInterval(updateTimer, 1000); } 
        else { showFinalResult(false); document.getElementById('timer').innerText = formatTime(state.endTime - state.startTime); }
        document.getElementById('final-max').innerText = document.querySelectorAll('.question-box').length;
    });

    function updateTimer() {
        const diff = Date.now() - state.startTime;
        document.getElementById('timer').innerText = formatTime(diff);
    }
    function formatTime(ms) {
        const totalSeconds = Math.floor(ms / 1000);
        const m = Math.floor(totalSeconds / 60); const s = totalSeconds % 60;
        return (m < 10 ? '0'+m : m) + ':' + (s < 10 ? '0'+s : s);
    }

    // --- LOGIKA PYTA≈É ---
    function checkChoice(qId, btn, isCorrect) {
        if (state.answeredIds[qId] !== undefined || state.isFinished) return;
        state.answeredIds[qId] = isCorrect;
        if(isCorrect) state.score++;
        
        const parent = btn.parentElement;
        const allBtns = parent.querySelectorAll('.choice-btn');
        allBtns.forEach(b => b.disabled = true);
        parent.parentElement.classList.add('locked');

        if(isCorrect) {
            btn.classList.add('selected-correct');
            parent.nextElementSibling.innerHTML = '<span class="correct">&#10004; ≈öwietnie!</span>';
        } else {
            btn.classList.add('selected-wrong');
            parent.nextElementSibling.innerHTML = '<span class="wrong">&#10006; B≈ÇƒÖd!</span>';
            allBtns.forEach(b => { if(b.getAttribute('onclick').includes('true')) b.classList.add('show-correct'); });
        }
        saveState();
    }

    function checkInput(qId, inputId, correctAnswers) {
        if (state.answeredIds[qId] !== undefined || state.isFinished) return;
        const input = document.getElementById(inputId);
        const btn = input.nextElementSibling;
        const feedback = document.getElementById('fb-' + inputId);
        
        let val = input.value.trim().replace(/\s/g, '').toLowerCase();
        // Normalizacja apostrof√≥w
        val = val.replace(/‚Äô/g, "'").replace(/`/g, "'");
        
        let correct = correctAnswers.map(a => a.toString().replace(/\s/g, '').toLowerCase());
        const isCorrect = correct.includes(val);

        state.answeredIds[qId] = isCorrect;
        if(isCorrect) state.score++;

        input.disabled = true; btn.disabled = true;
        input.closest('.question-box').classList.add('locked');

        if(isCorrect) {
            input.style.borderColor = '#2e7d32'; input.style.backgroundColor = '#e8f5e9';
            feedback.innerHTML = '<span class="correct">&#10004; Dobrze!</span>';
        } else {
            input.style.borderColor = '#c62828'; input.style.backgroundColor = '#ffebee';
            feedback.innerHTML = '<span class="wrong">&#10006; ≈πle. Poprawnie: ' + correctAnswers[0] + '</span>';
        }
        saveState();
    }

    // --- ZAPIS STANU ---
    function saveState() { localStorage.setItem(STORAGE_KEY, JSON.stringify(state)); }
    function loadState() {
        const saved = localStorage.getItem(STORAGE_KEY);
        if (saved) { state = JSON.parse(saved); restoreUI(); }
    }
    function restoreUI() {
        for (const [qId, isCorrect] of Object.entries(state.answeredIds)) {
            const box = document.getElementById(qId);
            if(!box) continue;
            box.classList.add('locked');
            box.querySelectorAll('button').forEach(b => b.disabled = true);
            const input = box.querySelector('input');
            if(input) {
                input.disabled = true; 
                if(isCorrect) { input.style.borderColor = '#2e7d32'; input.style.backgroundColor = '#e8f5e9'; }
                else { input.style.borderColor = '#c62828'; input.style.backgroundColor = '#ffebee'; }
            }
            const fb = box.querySelector('.feedback');
            if(fb) fb.innerHTML = isCorrect ? '<span class="correct">&#10004; OK</span>' : '<span class="wrong">&#10006; B≈ÇƒÖd</span>';
        }
    }
    function resetTest() { if(confirm('Zresetowaƒá?')) { localStorage.removeItem(STORAGE_KEY); location.reload(); } }

    // --- FINA≈Å ---
    function finishTest() {
        if(!confirm("Zako≈Ñczyƒá test?")) return;
        clearInterval(timerInterval); state.isFinished = true; state.endTime = Date.now();
        saveState(); showFinalResult(true);
    }

    function showFinalResult(scroll) {
        document.getElementById('final-score').innerText = state.score;
        if(state.endTime) document.getElementById('final-time').innerText = formatTime(state.endTime - state.startTime);
        
        let stats = {};
        document.querySelectorAll('.question-box').forEach(box => {
            let cat = box.getAttribute('data-category');
            if(!stats[cat]) stats[cat] = { total: 0, correct: 0 };
            stats[cat].total++;
            if(state.answeredIds[box.id] === true) stats[cat].correct++;
        });

        const tbody = document.getElementById('diagnostic-body');
        const recList = document.getElementById('recommendation-list');
        tbody.innerHTML = ''; recList.innerHTML = '';
        let issues = false;

        for (const [cat, data] of Object.entries(stats)) {
            if(data.total === 0) continue;
            let p = Math.round((data.correct / data.total) * 100);
            let cls = p >= 75 ? 'diag-good' : (p >= 50 ? 'diag-ok' : 'diag-bad');
            tbody.innerHTML += `<tr><td>${catNames[cat] || cat}</td><td>${data.correct}/${data.total}</td><td class="${cls}">${p}%</td></tr>`;
            if(p < 60) {
                issues = true;
                recList.innerHTML += `<li>S≈Çabo: <b>${catNames[cat] || cat}</b></li>`;
            }
        }
        if(issues) document.getElementById('recommendation-box').style.display = 'block';
        document.getElementById('final-result').style.display = 'block';
        document.getElementById('finish-btn').style.display = 'none';
        if(scroll) document.getElementById('final-result').scrollIntoView({behavior: 'smooth'});
    }

    // --- WYSY≈ÅKA DO GOOGLE SHEETS ---
    function sendToGoogleSheets() {
        const btn = document.getElementById('send-results-btn');
        const nameInput = document.getElementById('student-name');
        const studentName = nameInput.value.trim();

        if(studentName.length < 3) { alert("Wpisz imiƒô i nazwisko!"); nameInput.focus(); return; }
        
        btn.disabled = true; btn.innerText = "‚è≥ Wysy≈Çanie...";

        const dataToSend = {
            uczen: studentName,
            temat: document.getElementById('test-title').innerText + " - " + document.getElementById('test-subtitle').innerText,
            wynik: state.score + " / " + document.getElementById('final-max').innerText,
            czas: document.getElementById('final-time').innerText,
            diagnoza: Array.from(document.querySelectorAll('#diagnostic-body tr')).map(r => r.cells[0].innerText + " (" + r.cells[2].innerText + ")").join(", ")
        };

        fetch(GOOGLE_SCRIPT_URL, {
            method: "POST", mode: "no-cors",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(dataToSend)
        }).then(() => {
            btn.innerText = "‚úÖ Wynik wys≈Çany!"; btn.style.backgroundColor = "#2e7d32";
            alert("Pomy≈õlnie wys≈Çano wynik do nauczyciela!");
        }).catch(err => {
            console.error(err); btn.innerText = "‚ùå B≈ÇƒÖd"; alert("WystƒÖpi≈Ç b≈ÇƒÖd. Zr√≥b zdjƒôcie ekranu.");
        });
    }
</script>
</body>
</html>